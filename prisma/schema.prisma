datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model userInfo {
  id       Int    @id @default(autoincrement())
  email    String @unique
  username String
  password String
  mode     String @default("normal") // Set default value to "normal"
}

model imageInfo {
  id              Int      @id @default(autoincrement())
  username        String
  upload_date     DateTime
  image_name      String
  image_size      String
  image_type      String
  key_value_pairs Json
  image_data      String?

  FinalData FinalData[] @relation("ImageToFinalData")
}

model FinalData {
  id              Int       @id @default(autoincrement())
  imageInfoId     Int
  imageInfo       imageInfo @relation("ImageToFinalData", fields: [imageInfoId], references: [id])
  username        String
  upload_date     DateTime
  image_name      String
  image_size      String
  image_type      String
  key_value_pairs Json
  image_data      String?
}
